<% content_for :js_page, 'pages/account' %>

<div class='nine large-9 columns'>
  <h3> Credit Card </h3>

  <p>
    <strong>Name:</strong>
    <%= @credit_card.name %>
  </p>

  <p>
    <%= link_to "Edit", edit_account_credit_card_path(@credit_card), :class => 'button' %> |
    <%= link_to "Destroy", account_credit_card_path(@credit_card), :data => {:confirm => 'Are you sure?'}, :method => :delete, :class => 'button' %> |
    <%= link_to "View All", account_credit_cards_path, :class => 'button' %>
  </p>
</div>
