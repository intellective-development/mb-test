<% content_for :store, false %>
<% content_for :standard_template, true %>
<% content_for :title, 'Delivery Addresses' %>
<% content_for :js_page, 'pages/account' %>
<div class="title-bar">
  <div class="row">
    <div class="large-12 column center">
      <h1 class="heading-title">Delivery Addresses</h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="large-3 medium-3 column nav-column">
    <%= render partial: 'account/shared/navigation' %>
  </div>
  <div class="large-9 medium-9 column">
    <% if @addresses.empty? %>
      <p class="lead">
        You do not have any stored shipping addresses.
      </p>
    <% else %>
      <ul class="large-block-grid-2 small-block-grid-2">
        <% for address in @addresses %>
          <li>
                <strong><%= address.name %></strong><br>
                <%= "#{address.address1} #{address.address2}, #{address.city}, #{address.state_name || address.state.try(:abbreviation)}, #{address.zip_code}" %></br>
                <%= link_to "Edit Address", edit_account_address_path(address) %> |
                <%= link_to "Delete", account_address_path(address), confirm: 'Are you sure?', method: :delete %>
            </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
