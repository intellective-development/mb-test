<% content_for :small_header, true %>
<% content_for :user_facing, true %>
<% content_for :email_reason, 'someone successfully signed in your account at Minibar Delivery' %>


<table class="container container-main" align="center"> <!-- INTRO TEXT BEGIN -->
  <tbody>
    <tr>
      <td><%= render partial: 'customer_notifier/header_logo' %></td>
    </tr>
    <tr>
      <td>
        <table class="row">
          <tbody>
            <tr>
              <th class="small-12 large-offset-2 large-8 columns first">
                <table>
                  <tr>
                    <th>
                      <br/>
                      <p class="text-left">
                        Hi <%= @resource.first_name %>,
                      </p><br />
                      <p class="text-left">
                        <strong>We noticed a recent sign in to your Minibar Delivery account from a new device or location.</strong>
                      </p><br />
                      <center data-parsed="">
                        <table align="center">
                          <tr style="border: 1px solid lightgrey; border-bottom: 0;">
                            <td style="padding: 16px;">
                              <strong>Device:</strong><br />
                              <%= @device %>
                            </td>
                          </tr>
                          <tr style="border: 1px solid lightgrey; border-bottom: 0;">
                            <td style="padding: 16px;">
                              <strong>Location:</strong><br />
                              <%= @location %>
                            </td>
                          </tr>
                          <tr style="border: 1px solid lightgrey;">
                            <td style="padding: 16px;">
                              <strong>When:</strong><br />
                              <%= @time %>
                            </td>
                          </tr>
                        </table>
                      </center><br />
                      <p class="text-left">
                        If it was you, there is nothing you need to do and you may disregard this email.
                      </p><br />
                      <p class="text-left">
                        If it was not you, please contact us at <a class="text-link" href="tel:+18554870740"><strong>(855) 487-0740</strong></a> or <a class="text-link" href="mailto:help@minibardelivery.com"><strong>help@minibardelivery.com</strong></a>, so we can reset your password. Or tap the button below.
                      </p><br/>
                      <center data-parsed="">
                        <table align="center" class="button radius indent no-vertical expand">
                          <tr>
                            <td>
                              <table>
                                <tr>
                                  <td>
                                    <%= link_to 'Change Password Now', deny_access_url(@token), class: 'no-vertical button-text' %>
                                  </td>
                                </tr>
                              </table>
                            </td>
                          </tr>
                        </table><br />
                      </center>
                      <p class="text-left">
                        Cheers,
                      </p><br />
                      <p class="text-left">
                        The Minibar Delivery Team
                      </p>
                    </th>
                  </tr>
                </table>
              </th>
              <th class="small-12 large-2 last columns"></th>
            </tr>
          </tbody>
        </table>
      </td>
    </tr>
  </tbody>
</table><!-- INTRO TEXT END -->
