h4 {
  color: #781214;
  text-transform: uppercase;
  font-size: 18px;
  font-family: Avenir-Heavy, Avenir, Helvetica, Sans-Serif;
  margin-bottom: 0.5em;
  border-bottom: 1px solid #781214;
}

h5 {
  color: #781214;
  text-transform: uppercase;
  font-size: 13px;
  font-family: Avenir-Heavy, Avenir, Helvetica, Sans-Serif;
  margin-bottom: 0.5em;
}

h6 {
  color: #898989;
  font-size: 13px;
  font-family: Avenir-Heavy, Avenir, Helvetica, Sans-Serif;
}

.no-break td, .no-break th {
  word-break: normal !important;
  padding: 6px !important;
  text-align: left;
}

.no-vertical-spacing{
  margin-top:0px;
  margin-bottom:0px;
  padding-top:0px;
  padding-bottom:0px;
}