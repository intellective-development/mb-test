body {
  background-color: #000000;
}

.panel {
  background-color: #ffffff;
  border: none;
  padding: 15px !important;
}

.sub-panel {
  border: 2px solid #000000;
}

.hide-link, .hide-link:active, .hide-link:visited, .hide-link:hover {
  text-decoration: none !important;
  color: #000 !important;
}

.text-bold {
  font-weight: bold;
}

.text-h1 {
  font-family: "Georgia", "Times New Roman", serif;
  font-size: 22px;
  font-style: italic;
  text-align: center;
  word-break: normal !important;
}

.text-h1 span {
  font-size: 28px;
}

.text-h2 {
  font-family: "Georgia", "Times New Roman", serif;
  font-size: 26px;
  font-style: italic;
  text-align: center;
  word-break: normal !important;
}

.text-p1 {
  font-family: "Helvetica", "Arial", sans-serif
  font-size: 14px;
}

.footer-text, .footer-text a {
  color: #fff !important;
  font-family: "Helvetica", "Arial", sans-serif;
  font-size: 11px;
  text-decoration: none;
}

.footer-text a:hover {
  text-decoration: underline;
}

hr {
  background : #5c5c5c 50% 0 no-repeat;
  border : 0;
  height : 2px;
  margin : 1.3em auto;
  width: 80%;
}

.table-steps {
  margin: 1em 0;
}

.steps {
  vertical-align: center !important;
  line-height: 30px;
  font-family: "Helvetica", "Arial", sans-serif
  font-size: 14px;
}

.social {

}

img {
  float: none;
}

.social img {
  display: inline;
  float: none;
  margin-right: 10px;
}

.social img.last {
  margin-right: 0;
}

table.button,
table.tiny-button,
table.small-button,
table.medium-button,
table.large-button {
  width: 50%;
  overflow: hidden;
}

@media only screen and (max-width: 600px) {
  .table-steps {
    border-spacing: 0;
    border-collapse: collapse;
  }

  .table-steps td {
    word-break: normal !important;
    border-collapse: collapse !important;
  }

  table.button,
  table.tiny-button,
  table.small-button,
  table.medium-button,
  table.large-button {
    width: 100%;
    overflow: hidden;
  }

}