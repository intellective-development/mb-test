}

td.vertical-align-middle {
  vertical-align: middle;
}

table.body-image {
  margin-bottom: 2.4em;
}

table.container-share {
  margin-top: 0.4em;
}

table.container-main {
  margin-top: 0.4em;
}

table.top-border {
  border-top: 1px solid #e6e6e6;
}

.right-border {
  border-right: 1px solid #e6e6e6;
}

.module {
  padding-top: 1em;
}

.container-legal{
  border: 0 !important;
  background: transparent !important;
}

.legal {
  margin: 1em 0;
  color: #222;
  font-size: 11px;
  font-family: Helvetica, Arial, sans-serif;
  font-weight: normal;
  line-height: 19px;
}

.legal a {
  color: #15c;
  text-decoration: underline;
}

.referral-code {
  color: #92050b;
  font-family: Helvetica, Arial, sans-serif;
  font-weight: bold;
  background-color: #fff;
  padding: 7px 82px;
  border: 1px solid #9b9b9b;
  line-height: 1.4em;
  font-size: 14px;
  margin: 10px 75px;
}

table.table-icons {
  width: auto !important;
}

.pad-right {
  margin-right: 8px !important;
}

.product-title {
  max-width: 70%;
  margin: 0 auto;
}

img.logo {
  padding-top: 10px;
  padding-bottom: 10px;

  height: 70px !important; /* overwrite responsive w/h: auto; */
  width: 70px !important; /* overwrite responsive w/h: auto; */
}

.body-text {
  margin-left: 24px;
  margin-right: 24px;
}

/* Cart Abandonment Emails */

table.body-image--hero {
  margin-bottom: 1em;
}

.banner--hero {
  margin-bottom: 18px;
}

.banner-subtext--hero {
  margin-bottom: 0;
}

.product-tile {
  padding: 12px;
}

img.product-tile__image { /* img to override */
  height: 150px !important;  /* overwrite responsive w/h: auto; */
  margin-bottom: 12px;
}

.product-tile__volume, .product-tile__name {
  font-size: 13px;
  color: #4A4A4A;
  line-height: 1.4em;
  margin-bottom: 0;
}

.product-tile__name {
  border-top: 1px solid #e6e6e6;
  margin-top: 12px;

  font-weight: $heavy-font-weight;
  padding-top: 0.2em;
  margin-bottom: 0.35em;
}

.product-tile__volume {
  font-weight: 300;
}

table.cart-abandon_pre-product-module {
  margin-bottom: 1em;
}

.cart-abandon-offer_container {
  border: 1px solid black;
  width: 500px !important;
  height: 100px;
}

.cart-abandon-offer_icon_spacer {
  width: 150px;
}

.cart-abandon-offer_icon-container {
  margin: 12.5px 25px 0 35px;
  width: 75px;
  height: 75px;
}

.cart-abandon-offer_icon{
  width: 75px;
  height: 75px;
}

.confirmation-order-recipients {
  color: #000;
  font-weight: 800;
  display: flex;
  flex-direction: row;
}

.variant-row:first-child {
  border-top: none;
}

.variant-row {
  border-top: 1px #C8C8C8 solid;
  padding-top: 15px;
}

.engraving-column {
  border-top: 1px #C8C8C8 solid;
  padding-top: 15px;
}

.engraving-wrapper {
  display: flex;
}

.engraving-img-wrapper {
  margin-right: 5px;
  margin-top: auto;
  margin-bottom: auto;
}

.engraving-title {
  font-size: 14px;
}

.engraving-text {
  font-size: 12px;
}

.confirmation-order-recipients-email {
  color: #000;
  font-weight: 800;
}

.confirmation-order-recipients-more {
  color: #2c72db;
  margin-left: 6px;
  cursor: pointer;
}

.cart-abandon-offer_copy-container {
  width: 295px;
  height: 100px;
}

.cart-abandon-offer_copy {
  padding-top: 10px;
}

.cart-abandon-offer_headline {
  font-family: "Avenir", "Helvetica Neue", Arial, sans-serif !important;
  color: #6F6F6F;
  font-weight: 300;
  line-height: 1.4em;
  font-size: 16px;
  letter-spacing: 1.33px;
  margin-bottom: 5px;
  -webkit-hyphens: manual;
  -ms-hyphens: manual;
  hyphens: manual;
}

.cart-abandon-offer_body {
  font-family: "Avenir", "Helvetica Neue", Arial, sans-serif !important;
  font-weight: normal;
  line-height: 1.4em;
  font-size: 18px;
  margin-bottom: 0;
  -webkit-hyphens: manual;
  -ms-hyphens: manual;
  hyphens: manual;
}

.cart-abandon_legal {
  max-width: 450px;
  font-family: "Avenir", "Helvetica Neue", Arial, sans-serif !important;
  color: #6F6F6F;
  font-weight: normal;
  font-size: 8px;
  text-align: center;
  margin-top: 10px;
  -webkit-hyphens: manual;
  -ms-hyphens: manual;
  hyphens: manual;
}

