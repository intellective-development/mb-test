.border-left {
  border-left: 1px solid #ccc;
}

.border-right {
  border-right: 1px solid #ccc;
}

.red-highlight, .red-highlight:visited, .red-highlight:hover, .red-highlight:focus {
  color: #7d1316;
  text-decoration: none;
}

.text-small {
  color: #888;
  font-size: 0.9em;
}

.text-bold {
  font-weight: bold;
}

.red-heading {
  color: #7d1316;
  font-weight: bold;
}

.footer-text, .footer-link, .footer-link:visited, .footer-link:active {
  color: #999 !important;
  font-size: 10px;
}

.footer-link:hover {
  text-decoration: underline;
}

.footer {
  background-color: #ccc;
  text-align: center;
}

.footer table.columns td, .footer table.column td {
  padding-bottom: 5px;
}

.header table.columns td {
  padding-bottom: 0;
}

.social-icons {
  margin: 0 auto;
}

table.row.header__padded{
  padding-top: 45px;
  padding-bottom: 35px;
}

table.row.footer__padded{
  padding-bottom: 25px;
}

.row__inline-items{
  width:100%;
}

.star__five-up{
  width:20%;
  text-align:center;
  font-family: helvetica, arial;
  font-size: 10px;
  color:#999;
}

.product__three-up{
  width:33%;
  text-align:center;
}

hr {
  border : 0;
  height : 2px;
  background : #d7d7d7 50% 0 no-repeat;
  margin : 1.3em 0;
}

@media only screen and (max-width: 600px) {
  .border-left, .border-right {
    border: none;
  }

  .totals table {
    border-spacing: 0;
    border-collapse: collapse;
  }

  .totals td {
    word-break: normal !important;
    border-collapse: collapse !important;
  }

}