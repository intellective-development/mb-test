/* -------------------------------------
    LAYOUT
------------------------------------- */

/* ----- Containers ----- */
table.container.main{
  margin-bottom: 10px !important;
  border:1px solid #e6e6e6;
}

table.container.main-first{
  margin-top:10px !important;
  margin-bottom: 10px !important;
  border:1px solid #e6e6e6;
}

table.container.sub{
  border:1px solid #e6e6e6;
  border-top: 0px;
  padding-bottom:0px;
}

table.container.top-border{
  margin-top: 20px !important;
  border-top: 1px solid #e6e6e6 !important;
}

table.container.sub-top{
  border:1px solid #e6e6e6;
  padding-bottom:0px;
}

table.container.sub-top-first{
  border:1px solid #e6e6e6;
  margin-top: 10px !important;
  padding-bottom:0px;
}

table.container.invis{
  border:0px solid #e6e6e6;
  border-top: 0px;
  padding-bottom:0px;
}

td.pred{
  min-width: 100px !important;
}



/* ----- Vertical ----- */
.section {
  margin-top:45px; /* Extra 20 to account for inks bottom margins */
  margin-bottom:25px;
}

.section-even{
  margin-top:45px;
  margin-bottom:35px;
}

.section-less {
  margin-top:30px; /* Extra 20 to account for inks bottom margins */
  margin-bottom:10px;
}

.section-bottom-less {
  margin-top:45px; /* Beneath subgrid, occasionally Ink adds 20*/
  margin-bottom:15px;
}

.section-logo {
  margin-top: 0;
  margin-bottom: 10px;
}

.no-bottom {
  margin-bottom:0px;
}

.no-top {
  margin-top:0px !important;
}

.no-vertical{
  margin-top: 0px;
  margin-bottom: 0px;
}

/* ----- Horizonatal ----- */
.indent{
  margin-right:50px;
  margin-left:50px;
}

.indent-minor{
  margin-left: 30px;
  margin-right: 30px;
}

.indent-major{
  margin-left:80px;
  margin-right:80px;
}

.no-left{
  margin-left: 0px;
  padding-left: 0px !important;
}

.no-right{
  margin-right: 0px;
}

.no-sides{
  padding-left: 0px;
  padding-right: 0px;
}

.bottom-border{
  border-bottom:1px solid #e6e6e6;
}

.no-bottom-border{
  border-bottom:none!important;
}

/* -------------------------------------
    MIXINS(?)
------------------------------------- */
table.container.no-box{ padding:0px; border:0px; margin:0px; }
.wrapper.no-box{ padding:0px; border:0px; margin:0px; }

