/* -------------------------------------
    GIFT CARDS
------------------------------------- */

table.gift-card {
    width: 100%;
    font-family: Avenir;
}

table.gift-card h2 {
    font-family: TiemposHeadlineWeb-Bold;
    font-weight: 900;
    letter-spacing: 0;
    margin: 0;
}

table.gift-card table.banner {
    margin-top: 28px;
    margin-bottom: 19px;
    width: 553px;
    height: 275px;
}

table.gift-card table.banner td {
    height: 275px;
    overflow: hidden;
    display: block;
}

table.gift-card img.image {
    margin: 20px auto 0;
    width: 293px;
    float: none;
}

table.gift-card b {
    font-weight: 800;
    color: #000;
}

table.gift-card p.price  {
    font-size: 22px;
    color: #000;
}

table.gift-card p.message, table.gift-card p.sender, table.gift-card p.code {
    font-size: 16px;
    color: #000;
    padding: 0 6px 26px;
    max-width: 541px;
    overflow-wrap: break-word;
}

table.gift-card table.button {
    margin-bottom: 40px;
}

table.gift-card table.button td {
    width: 214px !important;
}

table.gift-card table.button td a {
    font-size: 13px;
}


/* ---------------------------------------------------
    RESPONSIVENESS
    Nuke it from orbit. It's the only way to be sure.
------------------------------------------------------ */

/* Set a max-width, and make it display as block so it will automatically stretch to that width, but will also shrink down on a phone or something */
.container {
  display:block!important;
  max-width:650px!important;
  margin:0 auto!important; /* makes it centered */
  clear:both!important;
}

/* Be sure to place a .clear element after each set of columns, just to be safe */
.clear { display: block; clear: both; }


/* -------------------------------------------
    PHONE
    For clients that support media queries.
    Nothing fancy.
-------------------------------------------- */

@media only screen and (max-width: 580px) {

  /* ----- Vertical ----- */
  .section, .section-even, .section-less, .section-logo, .section-bottom-less  {
    margin-top:20px !important; /* Extra 10 to account for inks bottom margins */
    margin-bottom:0px !important;
  }

  .section-logo{
    margin-top:30px !important;
  }

  .no-top{
    margin-top:0px !important;
  }

  /* ---- Horizontal ---- */
  .indent{
    margin-right:15px !important;
    margin-left:15px !important;
  }

  .indent-minor{
    margin-left: 15px !important;
    margin-right: 15px !important;
  }

  .indent-major{
    margin-left:20px !important;
    margin-right:20px !important;
  }

  a, p, ul, b, center {
    font-size:16px;
  }
}

@media only screen and (max-width: 756px) {

  .product-name{
    padding-left:10px !important;
    width:260px !important;
  }

  .size-and-cost{
    padding-left:5px !important;
    width:50px !important;
  }
}
