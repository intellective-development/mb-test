<% content_for :title, 'Edit Tax Rate' %>
<h3>Editing (<%= @tax_rate.state.try(:abbreviation) || @tax_rate.zipcode %>) Tax Rate</h3>

<%= form_for(@tax_rate, :url => admin_config_tax_rate_path(@tax_rate)) do |f| %>
  <%= render :partial =>  'form', :locals => {:f => f} %>
<% end %>

<%= link_to 'Show', admin_config_tax_rate_path(@tax_rate), :class => 'button' %>
<%= link_to 'Back', admin_config_tax_rates_path, :class => 'button' %>