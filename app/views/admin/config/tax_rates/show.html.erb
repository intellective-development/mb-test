<% content_for :title, 'Tax Rate' %>
<p>
  <b>Percentage:</b>
  <%= @tax_rate.percentage %>
</p>

<p>
  <b> Zipcode </b>
  <%= @tax_rate.zipcode %>
</p>

<p>
  <b> State </b>
  <%= @tax_rate.state_name %>
</p>

<p>
  <b>Start date:</b>
  <%= @tax_rate.start_date %>
</p>

<p>
  <b>End date:</b>
  <%= @tax_rate.end_date %>
</p>

<p>
  <b>Active:</b>
  <%= @tax_rate.active %>
</p>

<%= form_for(@tax_rate, :url => admin_config_tax_rate_path(@tax_rate)) do |f| %>
  <%= render :partial =>  'min_form', :locals => {:f => f} %>
<% end %>

<%= link_to 'Back', admin_config_tax_rates_path, :class => 'button' %>
