<div class="row">
  <div class="large-4 columns">
    <p>
      <strong>Pay To:</strong><br />
      <span><%= invoice.pay_to_data.company_name %></span><br />
      <span><%= invoice.pay_to_data.address1 %></span><br />
      <span><%= invoice.pay_to_data.address2 %></span><br />
      <span><%= invoice.pay_to_data.location %></span>
    </p>
  </div>
  <div class="large-4 columns logo">
    <%= image_tag storefront.logo_file.url %>
  </div>
  <div class="large-4 columns">
    <h2>Invoice for <br /><%= invoice.period_name %></h2>
  </div>
</div>
<div class="row">
  <div class="large-4 columns">
    <p>
      <strong>Bill To:</strong><br />
      <%= invoice.recipient_name %><br />
      <%= invoice.description %>
    </p>
  </div>
  <div class="large-8 columns">
    <table>
      <thead>
        <tr>
          <th>Invoice Date</th>
          <th>Total Sales</th>
          <th>Total Due</th>
          <th>Payable By</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= invoice.issue_date ? invoice.issue_date.strftime("%m/%d/%Y") : '' %></td>
          <td><%= number_to_currency(invoice.items_total_amount) %></td>
          <td><%= number_to_currency(invoice.total_amount) %></td>
          <td><%= invoice.issue_date ? invoice.due_date.strftime("%m/%d/%Y") : '' %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
