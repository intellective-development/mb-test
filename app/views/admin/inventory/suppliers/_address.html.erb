<fieldset>
  <legend> Address </legend>
  <div class="row">
    <%= f.hidden_field :address_purpose, value: 'supplier' %>
    <div class="large-6 columns">
       <%= f.label :name %>
       <%= f.text_field :name, :class => '' %>
    </div>
    <div class="large-6 columns">
      <%= f.label :company %>
      <%= f.text_field :company, :class => '' %>
    </div>
  </div>
  <div class="row">
    <div class="large-6 columns">
      <%= f.label :address1 %>
      <%= f.text_field :address1 %>
    </div>
    <div class="large-6 columns">
      <%= f.label :address2 %>
      <%= f.text_field :address2 %>
    </div>
  </div>
  <div class="row">
    <div class="large-4 columns">
      <label><%= f.label 'State' %></label>
      <%= f.select :state_name, State.all.collect{ |s| [s.abbreviation] }, include_blank: false  %>
    </div>
    <div class="large-4 columns">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>
    <div class="large-4 columns">
      <%= f.label :zip_code %>
      <%= f.text_field :zip_code %>
    </div>
  </div>
  <div class="row">
    <div class="large-6 columns">
      <%= f.label :phone %>
      <%= f.text_field :phone %>
    </div>
  </div>
</fieldset>
