<% content_for :title, "#{@supplier.name} - Supplier" %>

<div class="row">
  <div class="small-7 columns">
    <h3> Supplier: <%= @supplier.name %></h3>
  </div>
  <div class="small-5 columns">
    <ul class="button-group">
      <li><span data-tooltip aria-haspopup="true" class="has-tip" title="This DOES NOT make products show up!">
          <%= link_to "Refresh Metadata", refresh_metadata_admin_inventory_supplier_path(@supplier), class: "button" %>
      </span></li>
      <li><span data-tooltip aria-haspopup="true" class="has-tip" title="This MIGHT make products show up!">
          <%= link_to "Refresh Products", reindex_products_admin_inventory_supplier_path(@supplier),class: 'button' %>
      </span></li>
    </ul>
  </div>
</div>
<div class='span-12'>
  <div class='panel'>
    <ul class='vertical-list'>
      <li> <%= label :supplier, :name %> <%= @supplier.name %></li>
      <li> <%= label :supplier, :email %> <%= @supplier.emails.join(', ') %> </li>
      <li> <label>Phone</label> <%= @supplier.address.try(:phone) %> </li>
      <li> <%= label :supplier, :active %> <%= @supplier.active? ? 'YES' : 'NO' %> </li>
      <li> <%= label :delivery, :hours %>
          <div style='margin-left: 200px; display:'>
            <%= simple_format delivery_hours(@supplier).join('<br />') %>
          </div>
      </li>
    </ul>
  </div>
</div>
