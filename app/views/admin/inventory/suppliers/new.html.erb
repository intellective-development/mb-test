<% content_for :title, 'Create Supplier' %>
<h3>New Supplier</h3>

<%= form_for @supplier, :url  => admin_inventory_suppliers_path do |form| %>
  <%= render partial: '/admin/inventory/suppliers/form_general', locals: {form: form } %>
  <%= render partial: '/admin/inventory/suppliers/form_zones', locals: {form: form } unless @supplier.id.nil? %>
  <%= render partial: '/admin/inventory/suppliers/form_hours', locals: {form: form } %>
  <%= render partial: '/admin/inventory/suppliers/form_notifications', locals: {form: form } %>
  <%= submit_tag "Create", :class  => "button" %>
<% end %>
