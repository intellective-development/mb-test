<% if @placement.errors.any? %>
  <div id="#error_explanation">
    <h2><%= pluralize(@placement.errors.count, "error") %> prohibited this placement from being saved:</h2>
    <ul>
      <% @placement.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<fieldset>
  <label>Name</label>
  <%= f.text_field :name %>

  <label>Content Type</label>
  <%= f.select :content_type, options_for_select(ContentPlacement.content_types.keys.collect { |s| [s.humanize, s] }, selected: @placement.content_type), {label: :content_type} %>

  <label>Default Promotion</label>
  <p><small>This will be shown regardless of eligibility rules if there are no other promotions available.</small></p>
  <%= f.select :default_promotion_id, @promotions, include_blank: true  %>
</fieldset>

<%= f.submit "Save", class: "button" %>
