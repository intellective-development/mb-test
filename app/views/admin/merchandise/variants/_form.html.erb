

<%= error_messages_for 'variant' %>

<fieldset id="admin-product-names" class='span-12'>
<div class='clear'></div>
<div class='span-3'>
  <%= form.label :sku %>
</div>
<div class='span-6 last'>
  <%= form.text_field :sku %>
</div>

<div class='clear'></div>
<div class='span-3'>
  <%= form.label :price %>
</div>
<div class='span-6 last'>
  <%= form.text_field :price %>
</div>

<div class='clear'></div>
<div class='span-3'>
  <%= form.label :supplier %>
</div>
<div class='span-6 last'>
  <%= form.select :supplier_id, Supplier.all.map{|s| [s.name, s.id] }, :include_blank => true %>
</div>

<%- if form.object.persisted? %>
  <%= form.hidden_field :id, :value => form.object.id %>
<%- end %>


</fieldset>