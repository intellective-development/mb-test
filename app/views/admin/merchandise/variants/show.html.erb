<%= render :partial => '/admin/merchandise/sub_header'%>

<h2> Product: <%= @product.name %></h2>

<%= link_to 'Edit Variant', edit_admin_merchandise_product_variant_path(@product, @variant), :class => 'button' %>

<fieldset id="admin-product-names" class='span-12'>

<div class='clear'></div>
<div class='span-3'>
  <%= label :variant, :sku %>
</div>
<div class='span-6 last'>
  <%= @variant.sku %>
</div>
<div class='clear'></div>
<div class='span-3'>
  <%= label :variant, :price %>
</div>
<div class='span-6 last'>
  <%= @variant.price %>
</div>

<div class='clear'></div>
<div class='span-3'>
  <%= label :variant, :cost %>
</div>

<div class='clear'></div>
<div class='span-3'>
  <%= label :variant, :count_on_hand %>
</div>
<div class='span-6 last'>
  <%= @variant.count_on_hand %>
</div>

<div class='clear'></div>
<div class='span-3'>
  <%= label :variant, :count_pending_to_customer %>
</div>
<div class='span-6 last'>
  <%= @variant.count_pending_to_customer %>
</div>

</fieldset>
<% if @variant.active? %>
  <%= link_to 'Inactivate Variant',
              admin_merchandise_product_variant_path(@product, @variant),
              :class => 'button alert', :method => :delete, :data => {:confirm => "Are you sure?"} %>
<% end %>
