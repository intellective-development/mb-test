<fieldset class='<%=  image_form.object.new_record? ? "new_fields" : "fields" %>'>
  <% if !image_form.object.new_record? %>
    <%= image_tag image_form.object.photo.url(:small), { id: "image-#{image_form.object.id}" } %>
  <% end %>

  <div style='float:right;'>
    <%= remove_child_link('remove', image_form) %>
  </div>

  <label>Photo ( larger than 500x500 pixels recommended, no watermarks )</label>
  <p><%= image_form.file_field  :photo %> </p>

  <label>Link to image</label>
  <%= image_form.text_field :photo_from_link, class: "js-product-image" %>
</fieldset>
