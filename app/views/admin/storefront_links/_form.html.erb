<%= error_messages_for 'fulfillment_service' %>
<%= form.hidden_field :storefront_id, value: @storefront.id %>
<fieldset class="span-12">
  <div class="row">
    <div class="large-6 column">
      <div>
        <label>Area</label>
        <%= form.select :area, StorefrontLink.areas.keys.map {|area| [area.to_s.humanize, area]} %>
      </div>

      <div>
        <label>Name</label>
        <%= form.text_field :name %>
      </div>

      <div>
        <label>URL</label>
        <%= form.text_field :url %>
      </div>

      <div>
        <label>Link Type</label>
        <%= form.select :link_type, StorefrontLink.link_types.keys.map {|type| [type.to_s.humanize, type]} %>
      </div>
    </div>
  </div>
</fieldset>
