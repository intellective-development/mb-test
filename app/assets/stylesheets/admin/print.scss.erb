@charset "UTF-8";

@import "vendor/foundation/variables";
@import "minibar/variables";
@import "webfonts_embedded";

@import 'vendor/css_print_framework';
@import 'vendor/foundation/components/global';
@import 'vendor/foundation/components/grid';
@import 'vendor/foundation/components/panels';

p, h1, h2, h3, h4, h5, h6, a, td, tr {
  color: #000000;
  font-family: "Helvetica", "Arial", sans-serif;
  font-size: 12px;
  line-height: 1.3em;
}

td {
  font-weight: $heavy-font-weight;
  small {
    font-size: 12px;
    font-weight: 300;
    text-transform: uppercase;
  }
}

/* By default foundation does not include the grid styles for print */
// vendor/_grid.scss:135
.column,
.columns { @include grid-column($columns:false); }

@for $i from 1 through $total-columns {
  .small#{-$i} { @include grid-column($columns:$i,$collapse:null,$float:false); }
}

@for $i from 0 through $total-columns - 2 {
  .small-offset-#{$i} { @include grid-column($offset:$i, $collapse:null,$float:false); }
}

[class*="column"] + [class*="column"]:last-child { float: $opposite-direction; }
[class*="column"] + [class*="column"].end { float: $default-float; }

.column.small-centered,
.columns.small-centered { @include grid-column($center:true, $collapse:null, $float:false); }

.contain-all{
  max-width: 960px;
}

#logo{
  background: transparent url(<%= asset_data_uri 'components/header/minibar.svg'%>) no-repeat 50% 50%;
  background-size: 70px 70px;
  background-size: contain;
  height: 80px;
  margin-top: 12px;
}

h4 {
  font-weight: bold;
  font-size: 12px;
  margin-bottom: 0.5em;
}

.container {
  border: 1px solid #979797;
  padding: 0 1em;
  margin-bottom: 1.5em;
}

.delivery-info {
  h3 {
    margin-top: 0.75em;
  }
}

.delivery-container {
  padding: 0.75em;
  h3 {
    font-weight: 400;
  }
}

.gift-message {
  font-size: 12px;
  font-style: italic;
  font-weight: 300;
}

table {
  border-collapse: collapse;
  border-spacing: 0;
}

.panel {
  border-bottom: none;
  border-left: none;
  border-right: none;
  margin-bottom: 0;
}

.order-details {
  margin-top: 1em;
}

.thin {
  font-weight: 300;
}

.advisory {
  font-style: italic;
}

.right{
  text-align: right;
}

.signature {
  margin-bottom: 2em;
  margin-top: 3em;
}

.no-border {
  border: none;
}

.top-border {
  border-top: 1px solid #9b9b9b;
}

th {
  font-size: 12px;
  font-style: italic;
  font-weight: 300;
}

tbody td, tfoot td {
  font-size: 12px;
  color: #4a4a4a;
  padding: 0.6em 0;
}

.center {
  text-align: center;
}

tfoot {
  h2 {
    margin: 0;
  }
  p{
    font-size: 10px;
    margin: 0;
  }
  td, tr, th {
    border: 0;
  }
  td {
    font-style: normal;
  }
}

td {
  &.content-top {
    padding: 0;
    vertical-align: top;
  }
  &.content-bottom {
    padding: 0;
    vertical-align: bottom;
  }
}

thead tr th, tbody tr td {
  border-bottom: solid 1px;
}

thead tr th {
  border-bottom: 1px solid #000;
}

tbody tr td {
  border-color: #ccc;
  font-size: 1em;
}

hr.section-divider{
  background-color: $brand-light-grey;
  border-color: $brand-light-grey;
  color: $brand-light-grey;
  height: 2px;
  margin: 1.5em 15px;
}

body.shipment-pdf{
  p, h1, h2, h3, h4, h5, h6, a, td,tr {
    font-family: $font-family-helvetica;
  }
}

h1 {
  color: #4A4A4A;
  font-size: 14px;
  font-weight: $heavy-font-weight;
  letter-spacing: 0;
}

h2 {
  font-size: 10px;
  font-weight: 200;
  margin-bottom: 2px;
  text-transform: uppercase;
}

h3 {
  font-size: 12px;
  font-weight: 200;
  margin-bottom: 1em;
  margin-top: 0;
  text-transform: uppercase;
}

.address-callout {
  font-size: 18px;
  font-weight: $heavy-font-weight;
}

p {
  color: #4A4A4A;
  font-weight: $heavy-font-weight;
  margin: 0 0 1em 0;
  .emphasis {
    font-size: 18px;
  }
}

.badges{
  float: right;
  margin: 2em 0px 2px;
  td{
    border: 0px;
    min-width: 30px;
    padding: 0px;
    text-align: center;
    vertical-align: middle;
    &.badge__icon{
      background: no-repeat transparent center center;
      background-size: 26px 26px;
      height: 26px;
      width: 26px;
      &.gift{
        background-image: url(<%= asset_data_uri 'fax/gift.png' %>);
      }
      &.new-customer{
        background-image: url(<%= asset_data_uri 'fax/new-customer.png' %>);
      }
      &.scheduled{
        background-image: url(<%= asset_data_uri 'fax/scheduled.png' %>);
      }
      &.vip{
        background-image: url(<%= asset_data_uri 'fax/vip.png' %>);
      }
    }
    &.badge__label{
      max-width: 80px;
      vertical-align: top;
      h3{
        font-size: 10px;
        font-weight: normal;
        margin: 0px;
        text-transform: uppercase;
      }
    }
  }
}
.badge__image{
  vertical-align: center;
}

.shipping_method__icon {
  background: no-repeat transparent center center;
    background-size: 40px 40px;
  height: 40px;
  width: 100%;
  &.shipped {
    background-image: url(<%= asset_data_uri 'fax/shipped.png'%>);
  }
  &.pickup {
    background-image: url(<%= asset_data_uri 'fax/pickup.png'%>);
  }
  &.on_demand {
    background-image: url(<%= asset_data_uri 'fax/on_demand.png'%>);
  }
}

.gift-detail__heading {
  font-size: 18px;
  margin-left: 25%;
  margin-right: 25%;
  width: 50%;
}

.gift-detail__qr {
  display: inline-block;
}

.gift-detail__message {
  font-size: 12px;
  font-style: italic;
  font-weight: 300;
  margin-bottom: 2em;
  margin-left: 25%;
  margin-right: 25%;
  width: 50%;
}

.minibar-promo {
  margin: 1em 0 1em 0;
  padding: 1em 2em 0 2em;
}

.minibar-promo__text {
  font-size: 18px;
  margin-bottom: 1em;
}

.seller {
  font-size: 12px;
}

.packing-slip-qr {
  margin: 0;
  height: 140px;
  width: 140px;
}

.packing-slip-qr-gift {
  margin: 0;
  height: 180px;
  width: 180px;
}
